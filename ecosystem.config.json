{
  "apps": [{
    "name": "mindquiz",
    "script": "server/index.cjs",
    "instances": 1,
    "exec_mode": "fork",
    "watch": false,
    "max_memory_restart": "1G",
    "env": {
      "NODE_ENV": "production",
      "PORT": 3004
    },
    "error_file": "./logs/pm2-error.log",
    "out_file": "./logs/pm2-out.log",
    "log_file": "./logs/pm2-combined.log",
    "time": true,
    "autorestart": true,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}